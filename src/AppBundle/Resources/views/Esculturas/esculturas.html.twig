{% extends '::base.html.twig' %}
{% block body %}
    {% block header %}{% endblock %}
    <div class="container">
        <div class="row">
        {% for escultura in esculturas%}
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-image">
                        <img src="{{ escultura['imgUrl'] }}">
                    </div>
                    <div class="card-content white-text">
                        <span class="card-title">Titulo: {{ escultura["titulo"] }}</span>
                        <span class="card-title">Tipo: {{ escultura["tipo"] }}</span>
                        <span class="card-title">Ubicacion: {{ escultura["ubicacion"] }}</span>
                        <span class="card-title">Material: {{ escultura["material"] }}</span>
                        <span class="card-title">Autor: {{ escultura["autor"] }}</span>
                        <span class="card-title">{{ escultura["anio"] }}</span>
                    </div>
                    <div class="card-action">
                        <a href="#">This is a link</a>
                        <a href="#">This is a link</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
    {% block footer %}{% endblock %}
{% endblock %}